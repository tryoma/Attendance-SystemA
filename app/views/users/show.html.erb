<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table" id = "table-attendances" >
    <tr>
      <td colspan="4">
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= l(@first_day, format: :middle) %>時間管理表
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td colspan="4">
        指定勤務開始時間：<%= @user.designated_work_start_time %><br>
        指定勤務終了時間：<%= @user.designated_work_end_time %>
      </td>
      <td colspan="2">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td colspan="2">月初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td colspan="4">所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td colspan="2">名前：<%= @user.name %></td>
      <td colspan="1">コード</td>
      <td colspan="1">５５５５</td>
      <td colspan="2">出勤日数：<%= @worked_sum %>日</td>
      <td colspan="2">月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  
  <%= link_to "1ヶ月の勤怠編集へ", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-success" %>
  
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th colspan="1" rowspan="3">日付</th>
        <th colspan="1" rowspan="3">曜日</th>
        <th colspan="9" rowspan="1">【実績】</th>
        <th colspan="6" rowspan="1">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3" rowspan="1">出社</th>
        <th colspan="3" rowspan="1">退社</th>
        <th colspan="1" rowspan="2">在社時間</th>
        <th colspan="2" rowspan="2">備考</th>
        <th colspan="2" rowspan="1">終了予定時間</th>
        <th colspan="1" rowspan="2">時間外時間</th>
        <th colspan="1" rowspan="2">業務処理内容</th>
        <th colspan="1" rowspan="2">指示者確認㊞</th>
      </tr>
      <tr>
        <th rowspan="1">時</th>
        <th rowspan="1">分</th>
        <th rowspan="1">　</th>
        <th rowspan="1">時</th>
        <th rowspan="1">分</th>
        <th rowspan="1">　</th>
        <th rowspan="1">時</th>
        <th rowspan="1">分</th>
      </tr>
      
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table>
</div>