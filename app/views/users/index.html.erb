<% provide(:title, 'All Users') %>
<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>
<h1>ユーザー一覧</h1>

<td class="center">
  <%= link_to "ファイルを選択", "#", remote: true, class: "btn btn-default" %>
</td>

<td class="center">
  <%= link_to "CSVをインポート","#", remote: true, class: "btn btn-primary" %>
</td>

<div class="col-md-11 col-md-offset-1">
  <table class="table">
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if current_user.admin? && !current_user?(user) %>
            <%= user.name %><br>
            <%= link_to "削除", user, method: :delete,
                  data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %><br>
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#<%=user.id %>">編集</button>
              <div id="<%=user.id %>" class="collapse">
                <%= render 'users/form3', user: user %>
              </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>