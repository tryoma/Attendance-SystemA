<% provide(:title, '拠点登録') %>
<% provide(:class_text, 'signup') %>
<% provide(:button_text, '新規作成') %>
<h1>拠点登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @base, local: true) do |f| %>
      <%= render 'shared/error_messages2', object: @base %>
    
      <%= f.label :base_number, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_number, class: "form-control" %>
    
      <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_name, class: "form-control" %>
    
      <%= f.label :base_type, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_type, class: "form-control" %>
    
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>